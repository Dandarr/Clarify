{
    "name": "Clarify",
    "version": "1.0",
    "description": "A browser extension designed to make the browser more dyslexia friendly",
    "permissions": ["storage", "activeTab", "<all_urls>"],
    "manifest_version": 2,
    "author": "Thomas Smith",
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "change the font and sizing of your webpage here!",
        "default_icon": {
            "16": "images/icon_16.png",
            "32": "images/icon_32.png",
            "48": "images/icon_64.png",
            "128": "images/icon_128.png"
        }
    },
    "icons": {
        "16": "images/icon_16.png",
        "32": "images/icon_32.png",
        "48": "images/icon_64.png",
        "128": "images/icon_128.png"
    },
    "web_accessible_resources": [
        "style.css",
        "fonts/*.*"
      ],
    "content_scripts": [ {
        "js": ["background.js", "content.js" ],
        "matches": [ "http://*/", "https://*/", "https://*/*", "http://*/*" ],
        "css": ["style.css"]
    }]
}


